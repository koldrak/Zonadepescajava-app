<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/menu_background_shop"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/menu_glass_panel"
        android:elevation="6dp"
        android:orientation="vertical"
        android:padding="20dp">

    <TextView
        android:id="@+id/diceShopTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dice_shop_title"
        android:textAppearance="@style/TextAppearance.Material3.TitleLarge" />

    <TextView
        android:id="@+id/diceShopPoints"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/dice_shop_points_placeholder"
        android:textAppearance="@style/TextAppearance.Material3.BodyMedium" />

    <ScrollView
        android:id="@+id/diceShopScroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/diceShopD4Image"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:contentDescription="@string/dice_shop_d4_description"
                        android:scaleType="fitCenter" />

                    <TextView
                        android:id="@+id/diceShopD4Price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="@string/dice_shop_price_200" />
                </LinearLayout>

                <TextView
                    android:id="@+id/diceShopD4Owned"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    android:text="@string/dice_shop_owned_placeholder" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/diceShopBuyD4"
                    style="@style/Widget.Material3.Button.TonalButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/buy" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/diceShopD6Image"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:contentDescription="@string/dice_shop_d6_description"
                        android:scaleType="fitCenter" />

                    <TextView
                        android:id="@+id/diceShopD6Price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="@string/dice_shop_price_400" />
                </LinearLayout>

                <TextView
                    android:id="@+id/diceShopD6Owned"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    android:text="@string/dice_shop_owned_placeholder" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/diceShopBuyD6"
                    style="@style/Widget.Material3.Button.TonalButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/buy" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/diceShopD8Image"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:contentDescription="@string/dice_shop_d8_description"
                        android:scaleType="fitCenter" />

                    <TextView
                        android:id="@+id/diceShopD8Price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="@string/dice_shop_price_600" />
                </LinearLayout>

                <TextView
                    android:id="@+id/diceShopD8Owned"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    android:text="@string/dice_shop_owned_placeholder" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/diceShopBuyD8"
                    style="@style/Widget.Material3.Button.TonalButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/buy" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/diceShopD12Image"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:contentDescription="@string/dice_shop_d12_description"
                        android:scaleType="fitCenter" />

                    <TextView
                        android:id="@+id/diceShopD12Price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="@string/dice_shop_price_1000" />
                </LinearLayout>

                <TextView
                    android:id="@+id/diceShopD12Owned"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    android:text="@string/dice_shop_owned_placeholder" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/diceShopBuyD12"
                    style="@style/Widget.Material3.Button.TonalButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/buy" />

            </LinearLayout>

            <TextView
                android:id="@+id/cardPackTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:text="@string/card_pack_title"
                android:textAppearance="@style/TextAppearance.Material3.TitleMedium" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="12dp"

                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <TextView
                            android:id="@+id/cardPackRandomLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/card_pack_random_label" />

                        <ImageView
                            android:id="@+id/cardPackRandomImage"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:layout_marginTop="8dp"
                            android:contentDescription="@string/card_pack_random_description"
                            android:scaleType="fitCenter" />

                        <TextView
                            android:id="@+id/cardPackRandomPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="@string/card_pack_random_price" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/cardPackRandomBuy"
                            style="@style/Widget.Material3.Button.TonalButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="@string/buy" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="12dp"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <TextView
                            android:id="@+id/cardPackCrustaceoLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/card_pack_crustaceo_label" />

                        <ImageView
                            android:id="@+id/cardPackCrustaceoImage"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:layout_marginTop="8dp"
                            android:contentDescription="@string/card_pack_crustaceo_description"
                            android:scaleType="fitCenter" />

                        <TextView
                            android:id="@+id/cardPackCrustaceoPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="@string/card_pack_crustaceo_price" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/cardPackCrustaceoBuy"
                            style="@style/Widget.Material3.Button.TonalButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="@string/buy" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="12dp"

                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <TextView
                            android:id="@+id/cardPackSmallFishLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/card_pack_small_fish_label" />

                        <ImageView
                            android:id="@+id/cardPackSmallFishImage"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:layout_marginTop="8dp"
                            android:contentDescription="@string/card_pack_small_fish_description"
                            android:scaleType="fitCenter" />

                        <TextView
                            android:id="@+id/cardPackSmallFishPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="@string/card_pack_small_fish_price" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/cardPackSmallFishBuy"
                            style="@style/Widget.Material3.Button.TonalButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="@string/buy" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="12dp"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <TextView
                            android:id="@+id/cardPackBigFishLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/card_pack_big_fish_label" />

                        <ImageView
                            android:id="@+id/cardPackBigFishImage"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:layout_marginTop="8dp"
                            android:contentDescription="@string/card_pack_big_fish_description"
                            android:scaleType="fitCenter" />

                        <TextView
                            android:id="@+id/cardPackBigFishPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="@string/card_pack_big_fish_price" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/cardPackBigFishBuy"
                            style="@style/Widget.Material3.Button.TonalButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="@string/buy" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/dice_zone_background"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <TextView
                            android:id="@+id/cardPackObjectLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/card_pack_object_label" />

                        <ImageView
                            android:id="@+id/cardPackObjectImage"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:layout_marginTop="8dp"
                            android:contentDescription="@string/card_pack_object_description"
                            android:scaleType="fitCenter" />

                        <TextView
                            android:id="@+id/cardPackObjectPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="@string/card_pack_object_price" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/cardPackObjectBuy"
                            style="@style/Widget.Material3.Button.TonalButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="@string/buy" />

                    </LinearLayout>

                </LinearLayout>
            </HorizontalScrollView>

        </LinearLayout>
    </ScrollView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/diceShopBack"
        style="@style/Widget.Material3.Button.OutlinedButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/back" />

    </LinearLayout>

</LinearLayout>
