<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/menu_background_start"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/menu_glass_panel"
        android:elevation="6dp"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/settingsTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings_title"
            style="@style/App.Text.Title.Ocean"/>

        <TextView
            android:id="@+id/settingsAudioTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/settings_audio_title"
            style="@style/App.Text.Title.Ocean.Sub" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/settingsMusicLabel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/settings_music_volume" />

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/settingsMusicToggle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_audio_toggle" />
            </LinearLayout>

            <SeekBar
                android:id="@+id/settingsMusicVolume"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="100" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/settingsSfxLabel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/settings_sfx_volume" />

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/settingsSfxToggle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_audio_toggle" />
            </LinearLayout>

            <SeekBar
                android:id="@+id/settingsSfxVolume"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="100" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/settingsButtonLabel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/settings_button_volume" />

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/settingsButtonToggle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/settings_audio_toggle" />
            </LinearLayout>

            <SeekBar
                android:id="@+id/settingsButtonVolume"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="100" />
        </LinearLayout>

        <TextView
            android:id="@+id/settingsTutorialsTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/settings_tutorials_title"
            style="@style/App.Text.Title.Ocean.Sub" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/settingsTutorialDiceToggle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/settings_tutorial_dice" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/settingsTutorialDeckToggle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/settings_tutorial_deck" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/settingsTutorialGameLoopToggle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/settings_tutorial_game_loop" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/settingsTutorialReleaseToggle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/settings_tutorial_release" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/settingsBack"
            style="@style/App.Button.Glass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/back" />
    </LinearLayout>

</LinearLayout>
