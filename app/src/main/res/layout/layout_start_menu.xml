<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@drawable/menu_background_start"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/menu_glass_panel"
        android:elevation="6dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:text="Zona de Pesca"
            android:textSize="35sp"
            style="@style/App.Text.Title.Ocean" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/startNewGame"
            style="@style/App.Button.Watercolor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nuevo juego" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/openDiceShop"
            style="@style/App.Button.Glass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/dice_shop_title" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/openSettings"
            style="@style/App.Button.Glass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Configuraciones" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/openCollections"
            style="@style/App.Button.Glass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Colecciones" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/openRanking"
            style="@style/App.Button.Glass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/ranking_button" />

        <TextView
            android:id="@+id/scoreRecordsTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Records de puntaje"
            style="@style/App.Text.Title.Ocean.Sub" />

        <ListView
            android:id="@+id/scoreRecordsList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@android:color/darker_gray"
            android:dividerHeight="1dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:scrollbars="none"
            tools:listitem="@android:layout/simple_list_item_1" />

        <TextView
            android:id="@+id/scoreRecordsEmpty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="AÃºn no hay puntajes registrados"
            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
            android:textColor="@android:color/darker_gray"
            android:visibility="gone" />

    </LinearLayout>
</ScrollView>
