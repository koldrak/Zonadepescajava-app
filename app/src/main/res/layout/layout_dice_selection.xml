<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@android:color/white"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/diceSelectionInstruction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="@string/dice_selection_instruction"
        android:textAppearance="@style/TextAppearance.Material3.TitleSmall" />

    <FrameLayout
        android:id="@+id/diceSelectionZone"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/dice_zone_background"
        android:padding="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="zona de selección"
            android:textAppearance="@style/TextAppearance.Material3.BodyLarge" />
    </FrameLayout>

    <TextView
        android:id="@+id/diceSelectionCounter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/dice_selection_counter_placeholder"
        android:textAppearance="@style/TextAppearance.Material3.BodyMedium" />

    <FrameLayout
        android:id="@+id/diceWarehouseZone"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/dice_warehouse_background"
        android:padding="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|top"
            android:text="almacén de dados"
            android:textAppearance="@style/TextAppearance.Material3.BodyMedium" />
    </FrameLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/openDeckSelection"
        style="@style/Widget.Material3.Button.OutlinedButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="@string/deck_selection_title" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/confirmDiceSelection"
        style="@style/Widget.Material3.Button.TonalButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Iniciar partida" />

</LinearLayout>
