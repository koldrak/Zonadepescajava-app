<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/menu_background_collections"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/menu_glass_panel"
        android:elevation="6dp"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/deckSelectionTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/deck_selection_title"
            style="@style/App.Text.Title.Ocean" />

        <TextView
            android:id="@+id/deckSelectionScore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/deck_selection_score_placeholder"
            style="@style/App.Text.Title.Ocean.Sub" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/deckSelectionRecycler"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:clipToPadding="false"
            android:padding="4dp"
            tools:listitem="@layout/item_deck_selection_card" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/deckSelectionBack"
                style="@style/App.Button.Glass"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/back" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/deckSelectionConfirm"
                style="@style/App.Button.Watercolor"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_weight="1"
                android:text="@string/deck_selection_confirm" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
