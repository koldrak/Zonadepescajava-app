<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="gone"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingBottom="24dp"
    android:background="@drawable/fondojuego"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:visibility="visible">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/menu_glass_panel"
        android:elevation="6dp"
        android:padding="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/gameHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/action_bar_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:paddingVertical="12dp">

            <TextView
                android:id="@+id/score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/App.Text.Title.Ocean.Sub"
                android:paddingEnd="16dp"
                tools:text="Puntaje: 0" />

            <TextView
                android:id="@+id/captures"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                android:paddingStart="12dp"
                tools:text="Capturas: 0" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingVertical="8dp">

            <FrameLayout
                android:layout_width="92dp"
                android:layout_height="92dp"
                android:layout_marginEnd="4dp">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:alpha="0.35"
                    android:contentDescription="@string/description"
                    android:rotationX="6"
                    android:rotationY="14"
                    android:scaleX="1.04"
                    android:scaleY="0.96"
                    android:translationX="-6dp"
                    android:translationY="-6dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/mazocardumen" />

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:alpha="0.5"
                    android:contentDescription="@string/description"
                    android:rotationX="6"
                    android:rotationY="14"
                    android:scaleX="1.04"
                    android:scaleY="0.96"
                    android:translationX="-3dp"
                    android:translationY="-3dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/mazocardumen" />

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:alpha="0.7"
                    android:contentDescription="@string/description"
                    android:rotationX="6"
                    android:rotationY="14"
                    android:scaleX="1.04"
                    android:scaleY="0.96"
                    android:translationX="0dp"
                    android:translationY="0dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/mazocardumen" />

                <ImageView
                    android:id="@+id/cardumenDeckImage"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:contentDescription="@string/description"
                    android:rotationX="6"
                    android:rotationY="14"
                    android:scaleX="1.04"
                    android:scaleY="0.96"
                    android:scaleType="centerCrop"
                    android:src="@drawable/mazocardumen" />
            </FrameLayout>

            <TextView
                android:id="@+id/cardumenDeckLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_weight="1"
                android:text="Mazo de cardumen"
                android:textAppearance="@style/TextAppearance.Material3.BodyMedium" />
            <TextView
                android:id="@+id/deckInfo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_weight="1"
                android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                tools:text="Mazo restante: 22" />


        </LinearLayout>

        <TextView
            android:id="@+id/log"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
            android:textColor="@android:color/black"
            tools:text="Lanzaste D4=3" />

        <FrameLayout
            android:id="@+id/fishingZoneContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/section_panel"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="16dp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/boardRecycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:paddingBottom="8dp"
                tools:listitem="@layout/item_board_slot" />

            <FrameLayout
                android:id="@+id/fishingAnimationOverlay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="false"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:importantForAccessibility="no" />
        </FrameLayout>

        <LinearLayout
            android:id="@+id/actionBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/action_bar_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="12dp"
            android:paddingVertical="8dp">

            <TextView
                android:id="@+id/selection"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                tools:text="Dado preparado: D4=3" />

            <ImageView
                android:id="@+id/selectedDieImage"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:contentDescription="@string/description"
                android:padding="8dp"
                android:visibility="gone"
                tools:src="@drawable/ic_launcher_foreground"
                tools:visibility="visible" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Toca un dado de la reserva para lanzarlo"
            style="@style/App.Text.Title.Ocean.Sub"
            android:textAppearance="@style/TextAppearance.Material3.BodySmall" />

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/reserveDiceContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="4dp" />
        </HorizontalScrollView>

        <TextView
            android:id="@+id/lost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            style="@style/App.Text.Title.Ocean.Sub"
            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
            tools:text="Perdidos: 0" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/lostDiceContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="4dp" />
        </HorizontalScrollView>

        <TextView
            android:id="@+id/captureZoneTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="zona de capturas"
            style="@style/App.Text.Title.Ocean.Sub" />

        <HorizontalScrollView
            android:id="@+id/captureScroll"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/section_panel"
            android:scrollbars="none"
            android:fillViewport="true">

            <LinearLayout
                android:id="@+id/captureCardsContainer"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingVertical="4dp" />
        </HorizontalScrollView>


    </LinearLayout>
</ScrollView>
